<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ProjectsPageController">
   <children>
      <Label fx:id="uiTitle" text="Projects">
         <styleClass>
            <String fx:value="title" />
            <String fx:value="lbl-white" />
            <String fx:value="lbl-h2" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Label>
      <VBox>
         <children>
            <TitledPane fx:id="uiProjectExplorerPane" animated="false" styleClass="s1" text="Project Explorer">
               <content>
                  <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                     <items>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <TextField fx:id="uiSearchInput" promptText="Search Keyword" />
                              <Button fx:id="uiSearchBtn" mnemonicParsing="false" text="Search" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                        <VBox alignment="TOP_CENTER" spacing="15.0">
                           <children>
                              <Label fx:id="uiResultsLabel" styleClass="lbl-gray" text="Results" />
                              <FlowPane fx:id="uiResultsContainer" alignment="CENTER" columnHalignment="CENTER" hgap="10.0" orientation="VERTICAL" prefWrapLength="150.0" vgap="10.0" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </items>
                  </SplitPane>
               </content>
            </TitledPane>
            <TitledPane fx:id="uiProjectViewerPane" animated="false" layoutX="10.0" layoutY="10.0" styleClass="s1" text="Project Viewer - Active Project Name" />
         </children>
      </VBox>
   </children>
</VBox>
