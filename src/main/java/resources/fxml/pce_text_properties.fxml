<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.projectcanvas.PCETextPropertiesController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="uiNameLabel" styleClass="pce-prop-label" text="Text" />
            <TextField fx:id="uiNameInput" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0">
         <children>
            <Button fx:id="uiFontPlusBtn" mnemonicParsing="false">
               <graphic>
                  <FontAwesomeIconView glyphName="PLUS" />
               </graphic>
            </Button>
            <Button fx:id="uiFontMinusBtn" layoutX="98.0" layoutY="10.0" mnemonicParsing="false">
               <graphic>
                  <FontAwesomeIconView glyphName="MINUS" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
